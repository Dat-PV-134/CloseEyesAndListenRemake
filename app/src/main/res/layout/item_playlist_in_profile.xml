<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_14sdp">

    <ImageView
        android:id="@+id/imgPreviewPlaylist"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPlaylistName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/imgPreviewPlaylist"
        app:layout_constraintEnd_toStartOf="@id/imgDelete"
        app:layout_constraintStart_toEndOf="@id/imgPreviewPlaylist"
        app:layout_constraintTop_toTopOf="@id/imgPreviewPlaylist" />

    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:contentDescription="@null"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="@id/imgPreviewPlaylist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgPreviewPlaylist"
        app:tint="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>